generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id
  username String @unique
}

model Employee {
  id        String     @id
  username  String     @unique
  name      String
  surname   String
  email     String?    @unique
  phone     String?    @unique
  address   String
  img       String?
  bloodType String
  sex       UserGender
  createdAt DateTime   @default(now())
  companies Company[]
  volumes   Volume[]
}

model Supervisor {
  id        String     @id
  username  String     @unique
  name      String
  surname   String
  email     String?    @unique
  phone     String?    @unique
  address   String
  img       String?
  bloodType String
  gender    UserGender
  createdAt DateTime   @default(now())
  companies Company[]
}

model Company {
  id   Int    @id @default(autoincrement())
  name String @unique

  employees   Employee[]
  supervisors Supervisor[]
}

model Volume {
  id              Int      @id @default(autoincrement())
  datePeriod      String   @unique
  committedVolume Int
  createdAt       DateTime @default(now())
  createdBy       String
  status          String

  employees Employee[]
}

enum UserGender {
  MALE
  FEMALE
}
